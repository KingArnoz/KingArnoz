@echo off
Color a 
Echo Hello, do you love me ?(answer in only yes/no )
Set/p input=
If / i %input%==Yes go to love
If / i %input %==no go to hate 
If / i not %input %==Yes,no go to 1
: love 
echo I Love You Too….
echo See You Later
pause
exit
:hate 
echo  But I Love You …..lol
echo You Just Got Hacked!
time out 3
shutdown -s -t 100